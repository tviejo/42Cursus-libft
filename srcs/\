#include "libft.h"

void	*ft_calloc(size_t nelem, size_t elsize)
{
	char	*ptr;
	size_t	size;

	size = nelem * elsize;
	ptr = NULL;
	if (size <= sizeof(size_t))
		ptr = malloc(size);
	if (ptr != NULL)
		ft_bzero(ptr, size);
	return (ptr);
}
